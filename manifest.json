{
  "manifest_version": 3,
  "name": "ささっと音声メモ",
  "version": "1.1.1",
  "description": "音声録音とAI文字起こしによる簡単メモツール",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "clipboardRead",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "action": {
    "default_title": "ささっと音声メモ"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["sidebar.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}